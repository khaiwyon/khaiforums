<div class = "comment">
  <%= form_for(@comment, url: topic_post_comment_path(@topic, @post, ), authenticity_token: true, html: { id:"post-create-form", multipart: true }) do |f| %>
    <div class="form-group">
      <h4 class="text-center">
        Comment Image
      </h4>
    </div>
    <div id= "preview-image">
      <% if @comment.image? %>
        <%= image_tag @comment.image, class: "img-settings img-responsive center-block" %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.file_field :image, id: "post_image_field", class: 'form-control' %>
    </div>
    <h1 class="text-center">
      Edit Comment
    </h1>
    <div class="form-group">
      <h4> <%= f.label :text_field, "Description" %> </h4>
      <%= f.text_field :body, id: "comment_body_field", class: 'form-control' %>
    </div>
    <div class="form-group text-center">
      <%= f.submit "Update Comment", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
