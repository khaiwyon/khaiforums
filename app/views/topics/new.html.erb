<div class="topic">
  <%= form_for(@topic, url: topics_path, html: { id: "topic-create-form" }) do |f| %>
    <div class="EditCreateStyle text-center">
      New Topic
    </div>

    <div class= "EditCreateTitle">
      <%= f.label :title_field, "Title" %>
    </div>

    <div class="form-container">
      <div class="form-input">
        <%= f.text_field :title, required: true, id: "topic_title_field", class: 'form-control' %>
      </div>
    </div>

    <div class= "EditCreateTitle">
      <%= f.label :title_field, "Description" %>
    </div>

    <div class="form-container">
      <div class="form-label">
        <%= f.text_area :description, required: true, rows: 5, id: "topic_description_field", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Create Topic", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
