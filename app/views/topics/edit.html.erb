<div class="topic">
  <%= form_for(@topic, url: topic_path(@topic), html: { id: "topic-create-form" }) do |f| %>
    <% if @topic.image? %>
      <div class="form-group">
        <h4 class="text-center">
          Post Image
        </h4>
        <div id="preview-image">
          <%= image_tag "graybox.jpg", class: "img-settings img-responsive center-block" %>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.file_field :image, id: "post_image_field", class: 'form-control image-uploader' %>
    </div>

    <div class="EditCreateStyle text-center">
      Edit Topic
    </div>
    <div class= "EditCreateTitle"><%= f.label :title_field, "Title" %></div>

    <div class="form-container">
      <div class="form-input">
        <%= f.text_field :title, required: true, id: "topic_title_field", class: 'form-control' %>
      </div>
    </div>

    <div class= "EditCreateTitle">
      <%= f.label :title_field, "Description" %>
    </div>

    <div class="form-container">
      <div class="form-label">
        <%= f.text_area :description, required: true, rows: 5, id: "topic_description_field", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Confirm Edit", class: "btn btn-success btn-lg" %>
    </div>

  </div>
<% end %>
