<div class = "sessions">
  <%= form_tag sessions_path do %>
  <h1 class= "text-center">
    Login
  </h1>

  <div class="form-group">
    <%= text_field_tag :email, params[:email], id: "email_field", class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= password_field_tag :password, autocomplete: 'off', id: 'password_field', class: 'form-control' %>
    <div class='form-group text-center'>
      <%= submit_tag 'Login', class: 'btn btn-success btn-lg'%>
    </div>

    <div class='form-group text-center'>
      <li>
        <%= link_to 'New User', new_user_path %>
      </li>
    </div>
  <% end %>
</div>
