<div class = "post">
  <div class = "topicpic">
    <div class = "titleedit text-center">
      Posts
    </div>

    <div id="posts">
      <% @posts.each do |post| %>
        <%= render partial: "post", locals: { post: post, topic: @topic } %>
      <% end %>
    </div>

    <div id="posts-form-container">
      <%= render partial: "post_form", locals: { post: @post, topic: @topic } %>
    </div>
  </div>
</div>
