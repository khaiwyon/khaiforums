<div class = "post">
  <%= form_for(post, url: topic_posts_path(topic, post), method: :post, authenticity_token: true, remote: true, html: { id: "post-create-form", multipart: true }) do |f| %>
  <div class="form-group">
    <h4 class="text-center">
       Post Image
    </h4>
    <div id = "preview-image">
      <% if post.image? %>
      <%= image_tag post.image, class: "img-settings img-responsive center-block" %>
      <% end %>
    </div>
  </div>

  <div class = "preview-image">
    <%= f.file_field :image, id: "post_image_field", class: 'form-control image-uploader' %>
  </div>

  <div class = "EditCreateStyle text-center">
    New Post
  </div>

  <div class = "EditCreateTitle">
    <%= f.label :title_field, "Title" %>
  </div>

  <div class = "form-container">
    <div class = "form-input">
    <%= f.text_field :title, required: true, id: "post_title_field", class: 'form-control' %>
    </div>
  </div>

  <div class = "EditCreateTitle">
    <%= f.label :title_field, "Description" %>
  </div>

  <div class = "form-container">
    <div class = "form-label">
    <%= f.text_area :body, required: true, rows: 5, id: "post_body_field", class: 'form-control' %>
    </div>
  </div>

  <div class ="form-group text-center">
    <%= f.submit "Create Post", class: "btn btn-success btn-lg" %>
  </div>
  <% end %>
</div>
