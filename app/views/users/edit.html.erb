<div class="Users">
  <%= form_for(@user, url: users_path, html: {id: "user-create-form"}) do |f| %>
    <div class="form-group">
      <h4 class="text-center">
        User Image
      </h4>
      <div id= "preview-image">
        <% if @user.image? %>
        <%= image_tag @user.image, class: "img-settings img-responsive center-block" %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.file_field :image, id: "user_image_field", class: 'form-control image-uploader' %>
    </div>

    <div class="EditCreateStyle text-center">
      Edit Account Information
    </div>

    <div class="form-container">
      <div class="form-input">
        <%= f.text_field :email, required: true, rows: 5, id: "user_email_field", class: 'form-control' %>
      </div>
    </div>

    <div class="form-container">
      <div class="form-input">
        <%= f.text_field :username, required: true, rows: 5, id: "user_username_field", class: 'form-control' %>
      </div>
    </div>

    <div class="form-container">
      <div class="form-input">
        <%= f.text_field :password, required: true, rows: 5, id: "user_password_digest_field", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Edit User Account", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
